<div class="event layout_full block<?php echo $this->class; ?>">

  <h4><?php echo $this->title; ?></h4>

  <?php if ($this->recurring): ?>
    <p class="recurring"><?php echo $this->recurring; if ($this->until): ?> <?php echo $this->until; endif; ?>.</p>
  <?php endif; ?>
  
  <?php if($this->teaser): ?>
  	<?php echo $this->teaser; ?>
  <?php endif; ?>
  <?php if($this->addTime): ?><p><strong><?php echo date('G:i', $this->startTime) ?> Uhr bis <?php echo date('G:i', $this->endTime) ?> Uhr</strong></p><?php endif; ?>

  <?php if(!empty($this->location_street) || !empty($this->location_street) || !empty($this->location_city)): ?>
	<strong>Ort:</strong>
	<p class="location">
		<?php if(!empty($this->location_name)): ?><?php echo $this->location_name; ?><br /><?php endif; ?>
		<?php if(!empty($this->location_street)): ?><?php echo $this->location_street; ?><br /><?php endif; ?>
		<?php if(!empty($this->location_city)): ?><?php echo $this->location_zip; ?> <?php echo $this->location_city; ?><?php endif; ?>
	</p>
  <?php endif; ?>
  
  <?php if($this->price_whole): ?>
	<strong>Kosten:</strong>
	<p class="price">
		<?php echo $this->price_whole; ?>,<?php if($this->price_fraction): echo $this->price_fraction ?><?php else: ?>-<?php endif; ?>â‚¬ <?php echo $this->price_info; ?>
	</p>
  <?php endif; ?>

  <?php if ($this->details): ?>
    <?php echo $this->details; ?>
  <?php endif; ?>

  <?php if ($this->enclosure): ?>
    <div class="enclosure">
      <?php foreach ($this->enclosure as $enclosure): ?>
        <p><img src="<?php echo $enclosure['icon']; ?>" width="18" height="18" alt="<?php echo $enclosure['mime']; ?>" class="mime_icon"> <a href="<?php echo $enclosure['href']; ?>" title="<?php echo $enclosure['title']; ?>"><?php echo $enclosure['link']; ?> <span class="size">(<?php echo $enclosure['filesize']; ?>)</span></a></p>
      <?php endforeach; ?>
    </div>
  <?php endif; ?>
   
  <a href="<?php echo $this->replaceInsertTags('{{link_url::'.$this->replaceInsertTags('{{subscribejumpTo::'.$this->id.'}}').'}}'); ?>?eventId=<?php echo $this->id; ?>">Jetzt Anmelden</a>
  
</div>